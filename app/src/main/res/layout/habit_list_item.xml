<?xml version="1.0" encoding="utf-8"?><!-- A CardView that contains a TextView -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    android:maxHeight="@dimen/list_item_max_width"
    android:maxWidth="@dimen/list_item_max_width"
    android:minHeight="@dimen/list_item_min_width"
    android:minWidth="@dimen/list_item_min_width"
    app:cardCornerRadius="4dp"
    app:cardPreventCornerOverlap="false"
    app:contentPadding="@dimen/default_padding">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_list_item_habit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:lines="2"
            android:maxLines="2"
            android:maxWidth="100dp"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            tools:text="Read 10 minutes" />

        <TextView
            android:id="@+id/tv_list_item_reset_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="@dimen/list_item_between_padding"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/primary_text"
            tools:text="today" />

        <TextView
            android:id="@+id/tv_list_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center|bottom"
            android:paddingTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@color/primary_text"
            tools:text="00" />

    </LinearLayout>

</android.support.v7.widget.CardView>